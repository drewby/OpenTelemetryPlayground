{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Ops": {
    "Logging": {
      "Enabled": true,
      "Using": [ "Serilog.Sinks.Console", "Serilog.Expressions" ],
      "MinimumLevel": "Information",
      "Filter": [
        {
          "Name": "ByExcluding",
          "Args": {
            "expression": "RequestPath like '/metrics%' or RequestPath like '/health%'"
          }
        }
      ],
      "WriteTo": [
        { "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {RevisionHash} {Level:u3}] {Message:lj} ({TraceId}-{SpanId}) {NewLine}{Exception}"
          } 
        }
      ]
    },
    "Health": {
      "Enabled": true,
      "ReadyPath": "/health/ready",
      "LivePath": "/health/live"
    },
    "Metrics": {
      "Enabled": true,
      "MetricsPath": "/metrics"
    },
    "Tracing": {
      "Enabled": true,
      "IncomingIgnore": "/metrics, /health",
      "OltpExportEndpoint": "http://jaeger-collector.jaeger:4318/v1/traces"
    }
  },
  "AllowedHosts": "*"
}
